{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "**/*.ejs", "outDir": "dist/server/src" },
      { "include": "**/*.json", "outDir": "dist/server/src" }
    ]
  }
}
